<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/color_primary</item>
        <item name="colorPrimaryDark">?attr/color_primary_dark</item>
        <item name="colorAccent">?attr/color_accent</item>
        <item name="colorSurface">?attr/color_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorHighlight">@color/blue_highlight</item>
        <item name="android:textViewStyle">@style/NoneHFTextViewStyle</item>

        <item name="color_primary">@color/colorPrimaryDark</item>
        <item name="color_primary_dark">@color/colorPrimary</item>
        <item name="color_accent">@color/colorAccent</item>
        <item name="text_primary">@color/textPrimary</item>
        <item name="text_minor">@color/textMinor</item>
        <item name="text_assist">@color/textAssist</item>
        <item name="text_remarks">@color/textRemarks</item>
        <item name="text_blue">@color/colorDarkBlue</item>
        <item name="text_subtitle">@color/textSubtitle</item>

        <item name="text_default">@color/textPrimary</item>
        <item name="text_checked">@color/textPrimary</item>

        <item name="icon_default">@color/colorIcon</item>
        <item name="icon_white">@color/colorIconWhite</item>
        <item name="icon_black">@color/colorIcon</item>
        <item name="icon_gray">@color/colorIconGray</item>

        <item name="badger">@color/badger</item>

        <item name="bg_input">@color/bgInput</item>
        <item name="bg_white">@color/bgWhite</item>
        <item name="bg_black">@color/black</item>
        <item name="bg_gray">@color/bgGray</item>
        <item name="bg_window">@color/bgWindow</item>
        <item name="bg_menu">@color/bgMenu</item>
        <item name="bg_dark">@color/bgDark</item>
        <item name="bg_menu_border">@color/bgMenuBorder</item>
        <item name="flag_night">false</item>
        <item name="bg_gray_light">@color/bgGrayLight</item>
        <item name="bg_confirmation">@color/bgConfirmation</item>
        <item name="bg_block">@color/bgBlock</item>
        <item name="bg_post">@color/bgPost</item>
        <item name="bg_bubble">@color/bgBubble</item>

        <item name="icon_emergency">@drawable/ic_emergency_avatar</item>
        <item name="icon_emergency_contact">@drawable/ic_emergency_contact</item>

        <item name="code_border">@color/codeBorder</item>
    </style>


    <style name="NoneHFTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoAnim" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Capture" parent="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:immersive">true</item>
    </style>

    <style name="AppTheme.Avatar" parent="AppTheme.FullScreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?attr/text_primary</item>
    </style>

    <style name="AppTheme.Photo" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?attr/text_primary</item>
    </style>


    <style name="AppTheme.Call" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/call_gray</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="MixinAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:textColorPrimary">?attr/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="textColorAlertDialogListItem">?attr/text_primary</item>
        <item name="android:colorControlNormal">?attr/text_primary</item>
        <item name="android:background">?attr/bg_white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/selector_dialog_tv</item>
    </style>

    <style name="TransparentDialog" parent="@style/AppTheme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Custom">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="DescTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="android:colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppTheme.GrayProgress">
        <item name="android:indeterminateTint">?attr/icon_gray</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.BlueProgress">
        <item name="android:indeterminateTint">@color/colorBlue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.DarkBlueProgress">
        <item name="android:indeterminateTint">@color/colorDarkBlue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.WalletBlue">
        <item name="android:indeterminateTint">@color/wallet_blue_secondary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="BottomSheetModal" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_upper_round</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/bg_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="BoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Animation">
        <item name="android:windowEnterAnimation">@anim/dock_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_bottom_exit</item>
    </style>

    <style name="SeekBar">
        <item name="android:splitTrack">false</item>
        <item name="android:progressDrawable">@drawable/layer_progress</item>
        <item name="android:thumb">@drawable/ic_seek_bar</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="TransactionTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/text_minor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TransactionDescTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="AppTheme.MaterialButton">
        <item name="android:background">@drawable/bg_round_blue_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
