<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/color_primary</item>
        <item name="colorPrimaryDark">?attr/color_primary_dark</item>
        <item name="colorAccent">?attr/color_accent</item>
        <item name="colorSurface">?attr/color_primary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowBackground">?attr/bg_window</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorHighlight">@color/blue_highlight</item>
        <item name="android:textViewStyle">@style/NoneHFTextViewStyle</item>

        <item name="color_primary">@color/colorPrimaryDark</item>
        <item name="color_primary_dark">@color/colorPrimary</item>
        <item name="color_accent">@color/colorAccent</item>
        <item name="text_primary">@color/textPrimary</item>
        <item name="text_minor">@color/textMinor</item>
        <item name="text_assist">@color/textAssist</item>
        <item name="text_remarks">@color/textRemarks</item>
        <item name="text_blue">@color/colorDarkBlue</item>
        <item name="text_subtitle">@color/textSubtitle</item>

        <item name="text_default">@color/textPrimary</item>
        <item name="text_checked">@color/textPrimary</item>

        <item name="icon_default">@color/colorIcon</item>
        <item name="icon_white">@color/colorIconWhite</item>
        <item name="icon_black">@color/colorIcon</item>
        <item name="icon_google_black">@color/colorIconGoogleBlack</item>
        <item name="icon_gray">@color/colorIconGray</item>
        <item name="icon_action">@color/colorIconAction</item>

        <item name="badger">@color/badger</item>
        <item name="badger_mute">@color/badgerMute</item>
        <item name="badger_text">@color/badgerText</item>
        <item name="badger_text_mute">@color/badgerTextMute</item>

        <item name="bg_input">@color/bgInput</item>
        <item name="bg_white">@color/bgWhite</item>
        <item name="bg_black">@color/black</item>
        <item name="bg_gray">@color/bgGray</item>
        <item name="bg_window">@color/bgWindow</item>
        <item name="bg_menu">@color/bgMenu</item>
        <item name="bg_dark">@color/bgDark</item>
        <item name="bg_menu_border">@color/bgMenuBorder</item>
        <item name="flag_night">false</item>
        <item name="bg_gray_light">@color/bgGrayLight</item>
        <item name="bg_confirmation">@color/bgConfirmation</item>
        <item name="bg_block">@color/bgBlock</item>
        <item name="bg_post">@color/bgPost</item>
        <item name="bg_clip">@color/bgClip</item>
        <item name="bg_bubble">@color/bgBubble</item>
        <item name="bg_choose_network_yellow">@color/bgChooseNetworkYellow</item>
        <item name="bg_choose_network">@color/bgChooseNetwork</item>
        <item name="bg_bot">@color/bgBot</item>
        <item name="bg_divider">@color/divider</item>
        <item name="bg_translucence">@color/bgTranslucence</item>
        <item name="bg_pin_content">@drawable/chat_bubble_pin_message</item>
        <item name="bg_flag">@color/bgFlag</item>
        <item name="bg_action_button">@drawable/bg_button_action</item>
        <item name="bg_tip_info">@color/bgTipInfo</item>
        <item name="bg_tip_info_border">@color/bgTipInfoBorder</item>
        <item name="bg_tip_warning">@color/bgTipWarning</item>
        <item name="bg_tip_warning_border">@color/bgTipWarningBorder</item>

        <item name="music_played">@color/musicPlayed</item>
        <item name="music_unplayed">@color/musicUnPlayed</item>
        <item name="music_buffered">@color/musicBuffered</item>
        <item name="music_text">@color/musicText</item>
        <item name="music_floating_bg">@color/musicFloatingBg</item>
        <item name="music_play_pause_bg">@color/musicPlayPauseBg</item>

        <item name="bg_chain_gradient_start">@color/chainGradientStart</item>
        <item name="bg_chain_gradient_end">@color/chainGradientEnd</item>
        <item name="bg_market_gradient_start">@color/marketGradientStart</item>
        <item name="bg_market_gradient_end">@color/marketGradientEnd</item>
        <item name="icon_chain">@color/iconChain</item>
        <item name="bg_market_card">@drawable/bg_market_card</item>

        <item name="icon_emergency">@drawable/ic_emergency_avatar</item>
        <item name="icon_emergency_contact">@drawable/ic_emergency_contact</item>

        <item name="code_border">@color/codeBorder</item>
        <item name="nft_border">@color/nftBorder</item>
        <item name="bg_nft">@color/bgNft</item>

        <item name="map_default">@drawable/ic_map_default</item>

        <item name="android:colorControlHighlight">@color/highlight</item>

        <item name="snackbarStyle">@style/Snackbar</item>


        <item name="swirl_ridgeColor">@color/gray_light</item>
        <item name="swirl_errorColor">@color/colorRed</item>

        <item name="popupMenuStyle">@style/AppTheme.PopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/AppTheme.PopupMenuStyle.MenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/AppTheme.PopupMenuStyle.MenuTextAppearanceLarge</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="AppTheme.PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?attr/bg_white</item>
    </style>

    <style name="AppTheme.PopupMenuStyle.MenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
                <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="AppTheme.PopupMenuStyle.MenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="NoneHFTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoAnim" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Post" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">?attr/bg_post</item>
    </style>

    <style name="AppTheme.Capture" parent="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:immersive">true</item>
    </style>

    <style name="AppTheme.Photo" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">#33000000</item>
    </style>

    <style name="MixinAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:textColorPrimary">?attr/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="textColorAlertDialogListItem">?attr/text_primary</item>
        <item name="android:colorControlNormal">?attr/text_primary</item>
        <item name="android:background">?attr/bg_white</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/selector_dialog_tv</item>
    </style>

    <style name="TransparentDialog" parent="@style/AppTheme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Custom">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="DescTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="android:colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppTheme.GrayProgress">
        <item name="android:indeterminateTint">?attr/icon_gray</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.GrayProgressIndeterminate">
        <item name="android:indeterminateTint">?attr/icon_gray</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.BlueProgress">
        <item name="android:indeterminateTint">@color/colorBlue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.DarkBlueProgress">
        <item name="android:indeterminateTint">@color/colorDarkBlue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.WalletBlue">
        <item name="android:indeterminateTint">@color/wallet_blue_secondary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="BottomSheetModal" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_upper_round</item>
    </style>

    <style name="MixinBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/bg_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/bg_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="AppTheme.Call" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.Blur" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Music" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Animation">
        <item name="android:windowEnterAnimation">@anim/dock_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_bottom_exit</item>
    </style>

    <style name="TransactionTitleTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_assist</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TransactionDescTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="AppTheme.MaterialButton">
        <item name="android:background">@drawable/bg_round_blue_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@animator/selector_animator</item>
    </style>

    <style name="AppTheme.MaterialGrayButton">
        <item name="android:background">@drawable/bg_round_gray_btn</item>
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@animator/selector_animator</item>
    </style>

    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDarkBlue</item>
    </style>

    <style name="common_spinner">
        <item name="android:popupBackground">?attr/bg_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <item name="android:dropDownListViewStyle">@style/spinnerListStyle</item>
        <item name="android:dropDownItemStyle">@style/itemSpinnerStyle</item>
    </style>

    <style name="spinnerListStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="itemSpinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/bg_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LoadingProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoadingProgressDialog.FadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="BottomItemTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <style name="AppTheme.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">?text_primary</item>
        <item name="android:background">?bg_white</item>
        <item name="materialCalendarHeaderLayout">@style/AppTheme.HeaderLayout</item>
        <item name="materialCalendarStyle">@style/AppTheme.Calendar</item>
        <item name="colorPrimary">?color_accent</item>
        <item name="colorOnPrimary">?text_primary</item>
        <item name="colorOnSurface">?text_assist</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">?bg_window</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">?text_assist</item>
    </style>

    <style name="AppTheme.Calendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="rangeFillColor">#663D75E3</item>
        <item name="dayTodayStyle">@style/AppTheme.CalendarDayTodayStyle</item>
        <item name="daySelectedStyle">@style/AppTheme.DaySelectedStyle</item>
        <item name="dayStyle">@style/AppTheme.DayStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DatePicker.PositiveButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DatePicker.NegativeButton.Dialog</item>
        <item name="materialCalendarHeaderTitle">@style/AppTheme.DatePicker.NegativeButton.Dialog</item>

    </style>

    <style name="AppTheme.DatePicker.PositiveButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/selector_blue_tv</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.CalendarHeader" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">?text_primary</item>
    </style>

    <style name="AppTheme.DatePicker.NegativeButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/text_assist</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.CalendarDayTodayStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="itemFillColor">#AA3D75E3</item>
        <item name="itemTextColor">#FFF</item>
    </style>

    <style name="AppTheme.HeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">?bg_white</item>
    </style>

    <style name="AppTheme.DayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemTextColor">?text_primary</item>
    </style>

    <style name="AppTheme.DaySelectedStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">?color_accent</item>
        <item name="itemTextColor">#FFF</item>
    </style>

    <style name="AppTheme.RadioButtonDateStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_radio_date</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType" tools:ignore="NewApi">uniform</item>
    </style>

</resources>
