<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="12dp"
            android:height="12dp"
            android:tint="@color/color_chat_date"
            android:viewportWidth="11"
            android:viewportHeight="11">
            <path
                android:pathData="M 3 2 C 2.448 2 2 2.448 2 3 L 2 8 C 2 8.552 2.448 9 3 9 L 8 9 C 8.552 9 9 8.552 9 8 L 9 3 C 9 2.448 8.552 2 8 2 L 3 2 Z M 3 1 L 8 1 C 9.105 1 10 1.895 10 3 L 10 8 C 10 9.105 9.105 10 8 10 L 3 10 C 1.895 10 1 9.105 1 8 L 1 3 C 1 1.895 1.895 1 3 1 Z"
                android:fillColor="@color/white"/>
            <group
                android:name="hour"
                android:pivotX="5.5"
                android:pivotY="5.5">
                <path
                    android:pathData="M5,3.5C5,3.2239 5.2239,3 5.5,3V3C5.7761,3 6,3.2239 6,3.5V5.5C6,5.7761 5.7761,6 5.5,6V6C5.2239,6 5,5.7761 5,5.5V3.5Z"
                    android:fillColor="@color/white"/>
            </group>
            <group
                android:name="minute"
                android:pivotX="5.5"
                android:pivotY="5.5">
                <path
                    android:pathData="M7.2734,6.5664C7.4687,6.7617 7.4687,7.0782 7.2734,7.2735C7.0781,7.4687 6.7616,7.4688 6.5663,7.2735L5.1523,5.8594C4.957,5.6642 4.957,5.3476 5.1523,5.1524C5.3476,4.9571 5.6641,4.9571 5.8594,5.1523L7.2734,6.5664Z"
                    android:fillColor="@color/white"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="hour">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="5000"
                android:valueFrom="0"
                android:valueTo="1800"
                android:valueType="floatType"
                android:repeatMode="restart"
                android:repeatCount="infinite"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="minute">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:startOffset="1"
                android:duration="5000"
                android:valueFrom="0"
                android:valueTo="360"
                android:valueType="floatType"
                android:repeatMode="restart"
                android:repeatCount="infinite"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
