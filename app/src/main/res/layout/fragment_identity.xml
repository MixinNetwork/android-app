<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:need_divider="false"
        app:leftIcon="@drawable/ic_close" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="84dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_identity_verifying"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Identity_Verifying"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="?attr/text_primary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="?attr/text_primary"
        android:text="@string/identity_verifying_description" />

    <View
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <Button
        style="@style/AppTheme.MaterialButton"
        android:id="@+id/ok_tv"
        android:layout_width="116dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="40dp"
        android:text="@string/OK"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>