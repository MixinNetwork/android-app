<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_round_top_white"
              android:gravity="bottom"
              android:orientation="vertical">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/withdrawal_enter_pin"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:layout_marginBottom="@dimen/activity_vertical_margin"
              android:layout_gravity="center_horizontal"
              android:textSize="16sp"
              android:textColor="@android:color/black"/>

    <View android:layout_width="180dp" android:layout_height=".5dp"
          android:background="@color/divider"
          android:layout_marginBottom="6dp"
          android:layout_gravity="center_horizontal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <ViewAnimator
                android:id="@+id/pin_va"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <one.mixin.android.widget.PinView
                    android:id="@+id/pin"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:pin_tipVisible="false"/>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:theme="@style/AppTheme.BlueAccent"/>
            </FrameLayout>
        </ViewAnimator>

        <View android:layout_width="180dp" android:layout_height=".5dp"
              android:background="@color/divider"
              android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="16dp"
                android:text="@string/withdrawal_addr_pin_add"
                android:textColor="@color/text_gray"/>

        <one.mixin.android.widget.Keyboard
                android:id="@+id/keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>