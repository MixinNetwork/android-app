<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@drawable/ic_close_black_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@drawable/ic_msg_delete"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/copy_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/delete_iv"
        android:padding="16dp"
        android:src="@drawable/ic_content_copy"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/forward_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/copy_iv"
        android:padding="16dp"
        android:src="@drawable/ic_forward_black_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/add_sticker_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/forward_iv"
        android:padding="16dp"
        android:src="@drawable/ic_sticker_add"
        tools:ignore="ContentDescription" />
</RelativeLayout>