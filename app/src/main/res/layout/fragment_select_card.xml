<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="?attr/bg_white"
    tools:ignore="UseCompoundDrawables">

    <one.mixin.android.widget.RoundTitleView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/Select_a_Card"
        app:right_icon="@drawable/ic_circle_close"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_rv"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:visibility="visible"
        tools:itemCount="5"
        tools:listitem="@layout/item_card" />

    <TextView
        android:id="@+id/empty"
        android:text="@string/Empty_card"
        android:layout_height="240dp"
        android:gravity="center"
        android:textColor="?attr/text_primary"
        android:layout_width="match_parent"
        android:visibility="visible"
        tools:visibility="gone"/>

    <ViewAnimator
        android:id="@+id/add_va"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out"
        android:background="@drawable/bg_round_blue_btn_40">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/continue_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Add_New_Card"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/AppTheme.WhiteAccent" />
    </ViewAnimator>
</LinearLayout>