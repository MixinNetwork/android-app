<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <one.mixin.android.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightIcon="@drawable/ic_more"
            app:leftIcon="@drawable/ic_close_black"
            app:need_divider="false"
            app:titleText="@string/Wallet" />

        <ImageButton
            android:id="@+id/search_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/mixin_ripple"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_search_home"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coins_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager" />

        <RelativeLayout
            android:id="@+id/migration_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding8"
            android:background="@drawable/bg_round_migration_asset"
            android:visibility="gone"
            android:padding="@dimen/margin16">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:src="@drawable/ic_notice"
                android:layout_gravity="top"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding8"
                android:textColor="@color/text_white"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/icon"
                tools:text="@string/Asset_Migration_Content" />

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding8"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_white"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_below="@id/content"
                android:layout_toEndOf="@id/icon"
                tools:text="@string/Start_Migration" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>