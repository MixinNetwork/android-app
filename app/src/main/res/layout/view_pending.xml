<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_round_window_btn"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    tools:parentTag="android.widget.LinearLayout">

    <FrameLayout
        android:id="@+id/icon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp">

        <one.mixin.android.widget.CircleImageView
            android:id="@+id/icon_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:border_color="?attr/bg_white"
            app:border_text_size="14sp"
            app:border_width="1dp" />

        <one.mixin.android.widget.CircleImageView
            android:id="@+id/icon_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            app:border_color="?attr/bg_white"
            app:border_text_size="14sp"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/icon_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="?attr/text_assist"
            android:background="@drawable/bg_circle_text"
            android:textSize="8sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/text_primary"
        android:layout_marginStart="6dp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_gray_right" />

</merge>
