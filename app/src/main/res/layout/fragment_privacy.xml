<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/setting_privacy_security"/>

    <RelativeLayout
        android:id="@+id/blocked_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_contact_height"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/blocked_tv"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/setting_blocked"
            tools:ignore="RelativeOverlap"/>

        <TextView
            android:id="@+id/blocking_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/none"
            android:textColor="@color/text_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/conversation_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_contact_height"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/conversation_tv"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/setting_conversation"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/setting_privacy_tip"
            android:textColor="@color/text_gray"
            android:textSize="12sp"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/auth_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_contact_height"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/auth_tv"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/setting_authentications"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider"
        android:background="@color/bg_gray"/>

    <RelativeLayout
        android:id="@+id/emergency_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_contact_height"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/emergency_tv"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/setting_emergency"
            tools:ignore="RelativeOverlap"/>

        <TextView
            android:id="@+id/emergency_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin16"
            android:visibility="gone"
            android:textColor="@color/text_gray"
            android:text="@string/setting_emergency_enabled"/>

        <ProgressBar
            android:id="@+id/emergency_pb"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin16"
            android:theme="@style/AppTheme.BlueAccent"/>
    </RelativeLayout>
</LinearLayout>