<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:contentDescription="@null"
        android:src="@drawable/shadow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:blk_blurRadius="12"
        app:blk_downscaleFactor="0.12"
        app:blk_fps="60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bot"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:contentDescription="@null"
        android:foreground="@drawable/mixin_ripple"
        android:padding="37dp"
        android:src="@drawable/ic_shadow_bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@null"
        android:foreground="@drawable/mixin_ripple"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="@id/bot"
        app:layout_constraintStart_toEndOf="@id/bot"
        app:layout_constraintTop_toTopOf="@id/bot" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@null"
        android:foreground="@drawable/mixin_ripple"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="@id/bot"
        app:layout_constraintEnd_toStartOf="@id/bot"
        app:layout_constraintTop_toTopOf="@id/bot" />

</androidx.constraintlayout.widget.ConstraintLayout>