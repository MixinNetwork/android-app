<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_window"
    android:orientation="vertical">


    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/settings" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/account_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/privacy_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_account"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_privacy" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notification_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/notification_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_notification_confirmation"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_notification" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/backup_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/backup_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/backup"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_backup" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/storage_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/storage_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_data_storage"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_data" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="?attr/bg_window" />

            <RelativeLayout
                android:id="@+id/appearance_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/appearance_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_appearance"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_appearance" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="?attr/bg_window" />

            <RelativeLayout
                android:id="@+id/desktop_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/desktop_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_desktop"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_desktop" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="?attr/bg_window" />

            <RelativeLayout
                android:id="@+id/feedback_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/feedback_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_feedback"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_feedback" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/share_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_share"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_share" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="?attr/bg_window" />

            <RelativeLayout
                android:id="@+id/about_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="?attr/bg_white"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/about_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/about"
                    tools:ignore="RelativeOverlap"
                    android:drawablePadding="@dimen/margin12"
                    app:drawableStartCompat="@drawable/ic_setting_about" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>