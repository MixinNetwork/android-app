<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_window"
        android:orientation="vertical">

        <one.mixin.android.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="@string/Settings" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/bg_window"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/privacy_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Account"
                        app:drawableStartCompat="@drawable/ic_setting_privacy"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/notification_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/notification_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Notification_and_Confirmation"
                        app:drawableStartCompat="@drawable/ic_setting_notification"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/backup_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/backup_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Chat"
                        app:drawableStartCompat="@drawable/ic_setting_backup"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storage_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/storage_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Data_and_Storage_Usage"
                        app:drawableStartCompat="@drawable/ic_setting_data"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_divider"
                    android:background="?attr/bg_window" />

                <RelativeLayout
                    android:id="@+id/mixin_member_invoices_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/mixin_star_invoices_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/mixin_one"
                        app:drawableStartCompat="@drawable/ic_mixin_one"
                        tools:ignore="RelativeOverlap" />

                    <one.mixin.android.widget.lottie.RLottieImageView
                        android:id="@+id/mixin_member_plan_iv"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/ic_membership_advance" />

                    <TextView
                        android:id="@+id/mixin_member_plan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:text="@string/Upgrade_Plan"
                        android:textColor="?attr/text_assist"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_divider"
                    android:background="?attr/bg_window" />

                <RelativeLayout
                    android:id="@+id/appearance_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/appearance_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Appearance"
                        app:drawableStartCompat="@drawable/ic_setting_appearance"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_divider"
                    android:background="?attr/bg_window" />

                <RelativeLayout
                    android:id="@+id/desktop_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/desktop_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Mixin_Messenger_Desktop"
                        app:drawableStartCompat="@drawable/ic_setting_desktop"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_divider"
                    android:background="?attr/bg_window" />

                <RelativeLayout
                    android:id="@+id/feedback_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/feedback_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Feedback"
                        app:drawableStartCompat="@drawable/ic_setting_feedback"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/share_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/share_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/Invite_a_Friend"
                        app:drawableStartCompat="@drawable/ic_setting_share"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_divider"
                    android:background="?attr/bg_window" />

                <RelativeLayout
                    android:id="@+id/about_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_contact_height"
                    android:background="?attr/bg_white"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/about_tv"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:drawablePadding="@dimen/margin12"
                        android:gravity="center_vertical"
                        android:text="@string/About"
                        app:drawableStartCompat="@drawable/ic_setting_about"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>