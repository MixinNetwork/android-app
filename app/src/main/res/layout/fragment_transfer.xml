<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ph"
        app:need_divider="false"
        app:leftIcon="@drawable/ic_close_black_24dp"
        app:titleText="@string/transfer"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view"
        android:background="@color/bg_gray"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:background="@android:color/white">

            <one.mixin.android.widget.AvatarView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:id="@+id/asset_rl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_round_8_solid_gray"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginStart="@dimen/margin20">

                <androidx.legacy.widget.Space
                    android:id="@+id/center_place_holder"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"/>

                <one.mixin.android.widget.BadgeCircleImageView
                    android:id="@+id/asset_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/margin16"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/asset_name"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_above="@+id/center_place_holder"
                    android:layout_toEndOf="@+id/asset_avatar"
                    android:layout_toStartOf="@id/expand_iv"/>

                <TextView
                    android:id="@+id/asset_desc"
                    style="@style/DescTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/center_place_holder"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/asset_avatar"/>

                <TextView
                    android:id="@+id/desc_end"
                    style="@style/DescTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/asset_desc"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/asset_desc"
                    android:text="@string/balance"/>

                <ImageView
                    android:id="@+id/expand_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_keyboard_arrow_down_gray_24dp"
                    tools:ignore="ContentDescription"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/amount_ll"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/amount_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round_8_solid_gray"
                    android:hint="@string/wallet_transfer_amount"
                    android:inputType="numberDecimal"
                    android:paddingEnd="@dimen/margin16"
                    android:paddingStart="@dimen/margin16"
                    android:singleLine="true"
                    android:textColorHint="@color/wallet_text_gray"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:src="@drawable/ic_as"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/amount_as_et"
                    style="@style/DescTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:background="@drawable/bg_round_8_solid_gray"
                    android:textColor="@color/wallet_text_gray"
                    android:textSize="14sp"
                    android:paddingEnd="@dimen/margin16"
                    android:paddingStart="@dimen/margin16"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/transfer_amount_rl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_round_8_solid_gray">

                <EditText
                    android:id="@+id/transfer_amount_et"
                    style="@style/NormalTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="@string/wallet_transfer_amount"
                    android:singleLine="true"
                    android:textColorHint="@color/wallet_text_gray"
                    android:layout_toStartOf="@id/transfer_amount_tv"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:paddingEnd="@dimen/margin16"
                    android:paddingStart="@dimen/margin16"/>

                <TextView
                    android:id="@+id/transfer_amount_tv"
                    style="@style/DescTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="4dp"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/margin16"
                    android:paddingEnd="@dimen/margin16"
                    android:drawableStart="@drawable/ic_transfer_amount"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/transfer_memo"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginStart="@dimen/margin20"
                android:maxLength="140"
                android:singleLine="true"
                android:background="@drawable/bg_round_8_solid_gray"
                android:hint="@string/wallet_transfer_memo"
                android:textColorHint="@color/wallet_text_gray"
                android:paddingEnd="@dimen/margin16"
                android:paddingStart="@dimen/margin16"
                android:inputType="text"/>

            <ViewAnimator
                android:id="@+id/continue_animator"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:enabled="false"
                android:inAnimation="@anim/fade_in"
                android:outAnimation="@anim/fade_out"
                android:background="@drawable/bg_gray_btn">

                <TextView
                    android:id="@+id/continue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/common_continue"
                    android:textColor="@color/wallet_text_gray"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/AppTheme.WhiteAccent"/>
            </ViewAnimator>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>