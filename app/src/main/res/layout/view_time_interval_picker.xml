<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="LinearLayout"
    android:orientation="horizontal">

    <one.mixin.android.widget.picker.WheelPicker
        android:id="@+id/number_picker"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_cyclic="true"
        app:wheel_item_space="8dp"
        app:wheel_item_text_color="?attr/text_minor"
        app:wheel_item_text_size="20sp"
        app:wheel_selected_item_text_color="?attr/text_primary" />

    <one.mixin.android.widget.picker.WheelPicker
        android:id="@+id/unit_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:wheel_curved="true"
        app:wheel_cyclic="true"
        app:wheel_item_space="8dp"
        app:wheel_item_text_color="?attr/text_minor"
        app:wheel_item_text_size="20sp"
        app:wheel_selected_item_text_color="?attr/text_primary" />

</merge>