<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_white"
    android:orientation="vertical">

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/follow_twitter"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/follow_facebook"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/help_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/help_center"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/landing_terms_service"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/landing_privacy_policy"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/checkUpdates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/landing_check_updates"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/database"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button_height"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/database_debug"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>