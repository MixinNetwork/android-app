<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?bg_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/web_fail_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin20"
        android:src="@drawable/ic_web_load_fail"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/web_fail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/web_fail_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin12"
        android:text="@string/web_cannot_reached_title"
        android:textColor="?text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/web_fail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/margin12"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="@string/web_cannot_reached_desc"
        android:textColor="?text_minor" />

    <TextView
        android:id="@+id/reload_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/contact_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_round_blue_btn_solid"
        android:gravity="center"
        android:minWidth="146dp"
        android:minHeight="40dp"
        android:paddingStart="@dimen/margin12"
        android:paddingEnd="@dimen/margin12"
        android:text="@string/Reload"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contact_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/bottom_bottom_margin"
        android:gravity="center"
        android:minWidth="146dp"
        android:minHeight="40dp"
        android:paddingStart="@dimen/margin12"
        android:paddingEnd="@dimen/margin12"
        android:text="@string/Contact_Developer"
        android:textColor="?text_blue"
        android:textSize="16sp" />
</RelativeLayout>