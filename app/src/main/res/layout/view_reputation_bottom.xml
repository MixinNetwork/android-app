<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_window_top_8dp"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/Reputation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/text_primary"/>

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mixin_ripple"
            android:src="@drawable/ic_circle_close" />
    </RelativeLayout>

    <!-- Good Option -->
    <RelativeLayout
        android:id="@+id/optionGoodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_round_white"
        android:padding="16dp">

        <TextView
            android:id="@+id/optionGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/Good"
            android:textColor="?attr/text_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descriptionGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/optionGood"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="@string/description_good"
            android:textColor="?attr/text_assist"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/checkGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sticker_checked"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- Unknown Option -->
    <RelativeLayout
        android:id="@+id/optionUnknownContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_round_white"
        android:padding="16dp">

        <TextView
            android:id="@+id/optionUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/Unknown"
            android:textColor="?attr/text_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descriptionUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/optionUnknown"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="@string/description_unknown"
            android:textColor="?attr/text_assist"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/checkUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sticker_checked"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- Spam Option -->
    <RelativeLayout
        android:id="@+id/optionSpamContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_round_white"
        android:padding="16dp">

        <TextView
            android:id="@+id/optionSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/Spam"
            android:textColor="?attr/text_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descriptionSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/optionSpam"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="@string/description_spam"
            android:textColor="?attr/text_assist"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/checkSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sticker_checked"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
