<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/send_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:foreground="@drawable/mixin_ripple_round_left_12dp"
        android:text="@string/Send_transfer"
        android:textSize="14sp"
        android:textFontWeight="600"
        android:textColor="?attr/text_primary" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="#0D000000" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/receive_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:foreground="@drawable/mixin_ripple_round_right_12dp"
            android:textFontWeight="600"
            android:text="@string/Receive"
            android:textSize="14sp"
            android:textColor="?attr/text_primary" />

        <ProgressBar
            android:id="@+id/receive_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/AppTheme.BlueProgress"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:id="@+id/buy_delimiter"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:background="#0D000000" />

    <ViewAnimator
        android:id="@+id/buy_va"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:foreground="@drawable/mixin_ripple_round_right_12dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Buy"
            android:textSize="14sp"
            android:textFontWeight="600"
            android:textColor="?attr/text_primary" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:theme="@style/AppTheme.BlueProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </ViewAnimator>

    <View
        android:id="@+id/swap_delimiter"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:background="#0D000000" />

    <ViewAnimator
        android:id="@+id/swap_va"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:foreground="@drawable/mixin_ripple_round_right_12dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Swap"
            android:textSize="14sp"
            android:textFontWeight="600"
            android:textColor="?attr/text_primary" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:theme="@style/AppTheme.BlueProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </ViewAnimator>
</merge>